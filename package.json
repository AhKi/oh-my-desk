{
  "name": "oh-my-desk",
  "version": "v1.1.1",
  "description": "desktop widget application",
  "main": "app/main.js",
  "scripts": {
    "build": "yarn build:app && cross-env NODE_ENV=production electron-builder",
    "build:window": "yarn build:app && cross-env NODE_ENV=production electron-builder --win",
    "build:mac": "yarn build:app && cross-env NODE_ENV=production electron-builder --mac",
    "build:linux": "yarn build:app && cross-env NODE_ENV=production electron-builder --linux",
    "build:app": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "dev": "cross-env NODE_ENV=development ./node_modules/.bin/electron .",
    "start": "lint-staged && cross-env NODE_ENV=development node -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.dev.config.js --hot --inline --watch",
    "test": "jest --config jest.config.json",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "yarn test -- --coverage",
    "coverage": "open ./coverage/lcov-report/index.html",
    "lint": "eslint app --ext .js,.jsx",
    "precommit": "lint-staged",
    "prepush": "yarn lint"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahki/oh-my-desk.git"
  },
  "author": "hyunmoahn, suyoungkim",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "electron": "^2.0.3",
    "electron-builder": "^19.49.0",
    "electron-react-devtools": "^0.5.3",
    "electron-redux-devtools": "^0.3.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "redux-mock-store": "^1.5.3",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "classnames": "^2.2.6",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.2.0",
    "immutable": "^3.8.2",
    "moment": "^2.22.2",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.10",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^7.0.3",
    "sass-resources-loader": "^1.3.3",
    "style-loader": "^0.21.0",
    "uuid": "^3.3.0",
    "valid-url": "^1.0.9",
    "webpack": "^3.10.0"
  },
  "build": {
    "appId": "com.geekwims.omd",
    "mac": {
      "category": "oh.my.desk"
    },
    "files": [
      "app/*.js",
      "app/utils",
      "build",
      "node_modules",
      "app/assets"
    ]
  }
}

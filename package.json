{
  "name": "oh-my-desk",
  "version": "0.0.1",
  "description": "desktop widget application",
  "main": "main.js",
  "scripts": {
    "build": "yarn build:app && cross-env NODE_ENV=production electron-builder --win",
    "build:app": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js",
    "watch": "watchify app/app.js -o build/bundle.js -t babelify -v",
    "dev": "cross-env NODE_ENV=development ./node_modules/.bin/electron .",
    "start": "cross-env NODE_ENV=development node -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.dev.config.js --hot --inline --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start_win" : "set NODE_ENV=development node -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.dev.config.js --hot --inline --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geekwims/oh_my_system.git"
  },
  "author": "hyunmoahn, suyoungkim",
  "license": "GPL",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "cross-env": "^5.1.3",
    "electron": "^1.7.9",
    "electron-builder": "^19.49.0",
    "electron-react-devtools": "^0.5.2",
    "electron-redux-devtools": "^0.3.3",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.6",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.7",
    "html-webpack-plugin": "^2.30.1",
    "immutable": "^3.8.2",
    "node-sass": "^4.7.2",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.10",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uuid": "^3.1.0",
    "webpack": "^3.10.0"
  },
  "build": {
    "appId": "com.geekwims.omd",
    "mac": {
      "category": "oh.my.desk"
    },
    "files": [
      "*.js",
      "build",
      "node_modules",
      "src",
      "resource"
    ]
  }
}
